{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@blog/*": ["src/*"]
    },
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
